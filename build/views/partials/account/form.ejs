<div class="row">
    <div class="col-xs-12">
        <h4>Geral</h4>
        <hr>
    </div>
</div>
<div class="form-group">
    <label for="name">Nome</label>
    <input type="text" name="name" class="form-control" placeholder="Insira seu nome" value="<%= customer.name%>">
</div>

<input type="hidden" name="_id" value="<%= customer.id%>">

<div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control" placeholder="Insira seu e-mail" value="<%= customer.email%>">
</div>

<div class="form-group">
    <label for="password">Senha</label>
    <input type="password" name="password" class="form-control" placeholder="Senha" value="<%= customer.password%>">
</div>
<div class="row">
    <div class="col-xs-12">
        <h4>Dados Pessoais</h4>
        <hr>
    </div>
</div>
<div class="form-group">
    <label for="name">Data Nascimento</label>
    <input type="text" name="birthday" class="form-control" placeholder="XX/XX/XXXX" value="<%= customer.birthday%>">
</div>

<div class="form-group">
    <label for="name">CPF</label>
    <input type="text" name="cpf" class="form-control" placeholder="XXX.XXX.XXX-XX" value="<%= customer.id%>">
</div>

<div class="form-group">
    <label for="name">Telefone</label>
    <input type="tel" name="celphone" class="form-control" placeholder="(XX) XXXXX-XXXX" value="<%= customer.celphone%>">
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Entrega</h4>
        <hr>
    </div>
</div>

<div class="form-group">
    <label for="name">Rua</label>
    <input type="text" name="street" class="form-control" placeholder="Nome da sua Rua" value="<%= customer.address.street%>">
</div>


<div class="form-group">
    <label for="name">Bairro</label>
    <input type="text" name="neightborhood" class="form-control" placeholder="Bairro" value="<%= customer.address.neightborhood%>">
</div>

<div class="form-group">
    <label for="name">Numero</label>
    <input type="number" name="number_delivery" class="form-control" placeholder="Numero" value="<%= customer.address.number_delivery%>" >
</div>

<div class="form-group">
    <label for="name">Cidade</label>
    <input type="text" name="city" class="form-control" placeholder="Cidade" value="<%= customer.address.city%>">
</div>

<div class="form-group">
    <button type="submit" class="btn btn-red-dark-default">Salvar</button>
</div>